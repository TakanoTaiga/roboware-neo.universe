<launch>    
    <arg name="localization_debug_param_path" default="$(find-pkg-share roboware_neo_launch)/config/viz_field.param.yaml"/>
    <arg name="3d_model_path" default="$(find-pkg-share roboware_neo_launch)/3dmodel/field.stl"/>

    <!-- show field -->
    <node pkg="localization_debug" exec="localization_debug_node" >
        <remap from="output/maker" to="/localization/debug/field"/>
        <param from="$(var localization_debug_param_path)"/>
        <param name="marker.meshpath" value="$(var 3d_model_path)"/>
    </node>

    <node pkg="tf2_ros" exec="static_transform_publisher" name="map_to_mesh_field" args="0 0 -0.1 0 0 0 1 map mesh_field" />
</launch>
